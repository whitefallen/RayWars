{% extends 'base.html.twig' %}

{% block body %}
  {% for card in cards %}
    {% if card.getId() is odd %}
      <div class="py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-7 align-self-center">
              <h3 class="text-center"><a href="{{ path('app_card_info', {'card_id': card.getId()}) }}">#{{card.getId()}} - {{card.getName()}}</a></h3>
            </div>
            <div class="col-md-5">
              <img class="img-fluid d-block" src="https://pingendo.com/assets/photos/wireframe/photo-1.jpg"> </div>
          </div>
        </div>
      </div>
    {% else %}
    <div class="py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-5 order-2 order-md-1">
            <img class="img-fluid d-block" src="https://pingendo.com/assets/photos/wireframe/photo-1.jpg"> </div>
          <div class="col-md-7 order-1 order-md-2 align-self-center">
            <h3 class="text-center"><a href="{{ path('app_card_info', {'card_id': card.getId()}) }}">#{{card.getId()}} - {{card.getName()}} </a></h3>
          </div>
        </div>
      </div>
    </div>
    {% endif %}
  {% endfor %}
{% endblock %}
