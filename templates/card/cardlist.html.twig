{% extends 'common/base.html.twig' %}

{% block content %}
<div id="app">
  <div class="container">
    <div class="row">
      {% for card in cards %}
      <div class="col l3 s12">
        <div class="card hoverable">
          <div class=" card-image waves-effect waves-block waves-light">
            <a class="tooltipped" data-position="left" data-tooltip="#{{card.getId()}} - {{card.getName()}}" href="{{ path('app_card_info', {'card_id': card.getId()}) }}"><img class="responsive-img" src="/cards/image/card{{card.getId}}_1.png"></a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
