{% extends 'new/common/base.html.twig' %}

{% block content %}
<div id="app">
  <div class="container">
    <div class="row">
      {% for card in cards %}
      <div class="col l3">
        <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="responsive-img" src="/cards/image/card{{card.getId}}.png">
          </div>
          <div class="card-content">
            <span class="card-title grey-text text-darken-4">{{card.getName()}}</span>
            <p><a href="{{ path('new_app_card_info', {'card_id': card.getId()}) }}">#{{card.getId()}} - {{card.getName()}} </a></p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
